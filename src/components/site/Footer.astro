---
// Components
import Button from "@components/ui/Button.astro";
import Image from "astro/components/Image.astro";
import DarkModeToggle from "@components/ui/DarkModeToggle.astro";

// Content
import logoDark from "@assets/logo-white.png";
import {
  SITE_PHONE,
  SITE_PHONE_HREF,
  SITE_TITLE,
  SITE_UTM_SOURCE,
} from "@src/consts";
const today = new Date();
---

<footer class="font-space prose-xl bg-primary pb-4 pt-12 text-sm text-white">
  <div class="container mx-auto px-6">
    <div
      class="flex items-center gap-12 align-middle max-lg:flex-col max-lg:gap-0 lg:items-end">
      <Image src={logoDark} alt={SITE_TITLE} width="250" />
      <div class="lg:w-1/2 xl:w-2/3">
        <p>
          At Pioneer Construction we provide exceptional roofing solutions with
          integrity, professionalism, and a customer-first approach. We aim to
          protect homes and business by delivering high-quality craftsmanship,
          innovation techniques , and sustainable practices. Our commitment is
          to exceed expectations, prioritize safety, and build lasting
          relationship within our community.
        </p>
      </div>
      <div class="text-center lg:w-1/3">
        <a
          href={SITE_PHONE_HREF}
          class="text-3xl text-secondary transition-colors hover:text-yellow-200"
          >{SITE_PHONE}</a
        >
        <p class="text-lg">Free inspections for all jobs</p>
        <Button href="/contact" style="primary" text="Book an inspection" />
      </div>
    </div>
  </div>

  <div class="mt-12 px-4 text-center">
    <DarkModeToggle />
    <p class="mb-0">
      &copy; {today.getFullYear()}
      {SITE_TITLE}. All rights reserved.
    </p>
    <p class="mt-0 text-xs text-teal-500">
      Built from scratch with <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        viewBox="0 0 24 24"
        class="-mt-1 inline-block"
        ><path
          fill="none"
          stroke="currentColor"
          stroke-dasharray="30"
          stroke-dashoffset="30"
          stroke-linecap="round"
          stroke-width="2"
          d="M12 8C12 8 12 8 12.7578 7C13.6343 5.84335 14.9398 5 16.5 5C18.9853 5 21 7.01472 21 9.5C21 10.4251 20.7209 11.285 20.2422 12C19.435 13.206 12 21 12 21M12 8C12 8 12 8 11.2422 7C10.3657 5.84335 9.06021 5 7.5 5C5.01472 5 3 7.01472 3 9.5C3 10.4251 3.27914 11.285 3.75777 12C4.56504 13.206 12 21 12 21"
          ><animate
            fill="freeze"
            repeatCount="indefinite"
            attributeName="stroke-dashoffset"
            dur="7s"
            values="0;30;0;0;0;0;0;0;0"></animate></path
        ></svg
      > by <a
        href=`https://newvistadigital.com/?utm_source=${SITE_UTM_SOURCE}`
        target="_blank"
        class="text-teal-100 underline transition-colors hover:text-black"
        >New Vista Digital</a
      >
    </p>
  </div>
</footer>
