---
// Components
import NavLink from "@components/ui/NavLink.astro";
import Image from "astro/components/Image.astro";
// Assets
import logo from "@assets/logo.png";
import logoDark from "@assets/logo-white.png";

import { SITE_PHONE, SITE_PHONE_HREF, SITE_TITLE } from "@src/consts";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="container mx-auto gap-5 p-5 lg:flex">
  <Astronav>
    <div class="flex w-full items-center justify-between">
      <a class="text-xl font-extrabold" href="/">
        <Image
          src={logo}
          alt={SITE_TITLE}
          width="150"
          loading="eager"
          class="dark:hidden"
        />
        <Image
          src={logoDark}
          alt={SITE_TITLE}
          width="150"
          loading="eager"
          class="hidden dark:inline-block"
        />
      </a>
      <div class="block lg:hidden">
        <div class="flex justify-between">
          <MenuIcon class="h-4 w-4 text-zinc-800">
            <svg
              class="ham hamRotate ham8"
              viewBox="0 0 100 100"
              width="40"
              onclick="this.classList.toggle('active')">
              <path
                class="line top stroke-zinc-800 dark:stroke-white"
                d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"
              ></path>
              <path
                class="line middle stroke-zinc-800 dark:stroke-white"
                d="m 30,50 h 40"></path>
              <path
                class="line bottom stroke-zinc-800 dark:stroke-white"
                d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"
              ></path>
            </svg></MenuIcon
          >
        </div>
      </div>
    </div>
    <MenuItems class="hidden w-full justify-end lg:flex">
      <ul
        class="flex w-max flex-col items-center justify-end justify-end max-lg:w-full max-lg:items-end max-lg:border-b max-lg:border-b-zinc-300 lg:flex-row lg:gap-5">
        <li><NavLink href="/" data-navLink>Home</NavLink></li>
        <li><NavLink href="/about" data-navLink>About</NavLink></li>
        <li><NavLink href="/services" data-navLink>Services</NavLink></li>
        <li><NavLink href="/projects" data-navLink>Projects</NavLink></li>
        <li>
          <NavLink href="/contact" data-navLink>Contact Us</NavLink>
        </li>
        <li>
          <a
            href={SITE_PHONE_HREF}
            class="inline-block w-max text-xl font-bold text-primary dark:text-teal-400"
            >{SITE_PHONE}</a
          >
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>

<script>
  // Accessibility tool: add aria-current to current page nav links.
  const navLinks = document.querySelectorAll("[data-navLink]");

  navLinks.forEach((link) => {
    if (link.getAttribute("href") === window.location.pathname) {
      link.setAttribute("aria-current", "page");
    }
  });
</script>

<style>
  .ham {
    cursor: pointer;
    transition: transform 400ms;
    user-select: none;
  }
  .hamRotate.active {
    transform: rotate(45deg);
  }
  .hamRotate180.active {
    transform: rotate(180deg);
  }
  .line {
    fill: none;
    transition:
      stroke-dasharray 400ms,
      stroke-dashoffset 400ms;
    stroke-width: 5.5;
    stroke-linecap: round;
  }

  .ham8 .top {
    stroke-dasharray: 40 160;
  }
  .ham8 .middle {
    stroke-dasharray: 40 142;
    transform-origin: 50%;
    transition: transform 400ms;
  }
  .ham8 .bottom {
    stroke-dasharray: 40 85;
    transform-origin: 50%;
    transition:
      transform 400ms,
      stroke-dashoffset 400ms;
  }
  .ham8.active .top {
    stroke-dashoffset: -64px;
  }
  .ham8.active .middle {
    /* stroke-dashoffset: -20px; */
    transform: rotate(90deg);
  }
  .ham8.active .bottom {
    stroke-dashoffset: -64px;
  }
</style>
