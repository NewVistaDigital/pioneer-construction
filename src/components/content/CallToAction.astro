---
// Consts
interface Props {
  title: string;
  style: "primary" | "secondary";
  classes?: string;
}

const { title, style, classes, ...rest } = Astro.props as Props;
---

<section class="container mx-auto max-w-4xl py-4">
  <div
    class:list={[
      "prose-xl relative rounded-xl p-12 text-center",
      "bg-" + style,
      classes,
      style === "primary" && "text-white",
      style === "secondary" && "dark:text-black",
    ]}
    {...rest}>
    <h2 class="text-4xl font-bold">
      {title}
    </h2>
    <slot />
  </div>
</section>
