---
// Components
import { Icon } from "astro-icon/components";

// Content
import {
  SITE_EMAIL,
  SITE_PHONE,
  SITE_PHONE_HREF,
  SITE_UTM_SOURCE,
} from "@src/consts";
---

<section class="bg-white dark:bg-zinc-900">
  <div class="mx-auto max-w-screen-lg px-4 py-8 lg:py-16">
    <h1 class="mb-6">Contact us</h1>
    <div class="flex w-full flex-col gap-12 lg:flex-row">
      <div class="flex w-full flex-col gap-6 md:flex-row lg:w-1/2 lg:flex-col">
        <div class="md:w-1/2 lg:w-full">
          <p class="font-light text-zinc-500 dark:text-zinc-400 sm:text-xl">
            Got a question about your roof? Want to send feedback about how we
            did? Need a free inspection and advice on how to proceed with your
            roofs wind or hail damage? Let us know and we'll be in touch asap.
          </p>
        </div>
        <div>
          <ul class="leading-10">
            <li>
              <Icon
                name="solar:letter-bold"
                is:inline
                size="24"
                class="mr-3.5 inline rounded-full bg-primary p-1 text-white"
              /><a
                href=`mailto:${SITE_EMAIL}`
                class="text-teal-600 transition-colors hover:text-black hover:dark:text-white"
                >{SITE_EMAIL}</a
              >
            </li>
            <li>
              <Icon
                name="solar:phone-calling-bold"
                is:inline
                size="24"
                class="mr-2.5 inline rounded-full bg-primary p-1 text-white"
              />
              <a
                href={SITE_PHONE_HREF}
                class="text-teal-600 transition-colors hover:text-black hover:dark:text-white"
                >{SITE_PHONE}</a
              >
            </li>
          </ul>
        </div>
      </div>
      <form
        action="/success"
        class="w-full space-y-8 rounded-2xl bg-zinc-100 p-12 dark:bg-zinc-800 lg:w-1/2"
        name=`${SITE_UTM_SOURCE}-contact`
        method="POST"
        data-netlify="true">
        <div>
          <label
            for="email"
            class="mb-2 block text-sm font-medium text-zinc-900 dark:text-stone-300"
            >Your email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="block w-full rounded px-2.5 py-3.5 text-sm text-zinc-900 dark:bg-zinc-700 dark:text-white dark:placeholder-zinc-400"
            placeholder="you@gmail.com"
            required
          />
        </div>
        <div>
          <label
            for="subject"
            class="mb-2 block text-sm font-medium text-zinc-900 dark:text-zinc-300"
            >Subject</label
          >
          <input
            type="text"
            id="subject"
            name="subject"
            class="focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light block w-full rounded px-2.5 py-3.5 text-sm text-zinc-900 dark:bg-zinc-700 dark:text-white dark:placeholder-zinc-400"
            placeholder="Let us know how we can help you"
            required
          />
        </div>
        <div class="sm:col-span-2">
          <label
            for="message"
            class="mb-2 block text-sm font-medium text-zinc-900 dark:text-zinc-400"
            >Your message</label
          >
          <textarea
            id="message"
            name="message"
            rows="6"
            class="focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light block w-full rounded px-2.5 py-3.5 text-sm text-zinc-900 dark:bg-zinc-700 dark:text-white dark:placeholder-zinc-400"
            placeholder="Leave a comment..."></textarea>
        </div>
        <button type="submit" class="btn-primary">Send message</button>
      </form>
    </div>
  </div>
</section>
