---
import { Icon } from "astro-icon/components";
// required: npx add astro-icon

interface Props {
  text: string;
  href: string;
  style?: "primary" | "secondary";
  icon?: {
    name: string;
    side: "left" | "right";
  };
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
  target?: string;
}

const {
  text,
  href,
  style,
  icon,
  isFilled = true,
  borderVisible = false,
  classes,
  target,
  ...rest
} = Astro.props as Props;
---

<a
  href={href}
  class:list={[
    "btn",
    classes,
    "btn-" + style,
    { filled: isFilled, bordered: borderVisible },
  ]}
  {...rest}>
  {icon && icon.side === "left" && <Icon name={icon.name} />}

  <slot>{text}</slot>

  {icon && icon.side === "right" && <Icon name={icon.name} />}
</a>
